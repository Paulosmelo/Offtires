<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".LoginActivity">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/logo" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

                <EditText
                    android:id="@+id/edtNome"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:hint="@string/edtNome"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/edtSobrenome"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:hint="@string/edtSobrenome"
                    android:inputType="text" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

                <EditText
                    android:id="@+id/edtCPF"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:hint="@string/edtCPF"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/edtSenha"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:hint="@string/editSenha"
                    android:inputType="textPassword" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="334dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/edtEmail"
                    android:inputType="textEmailAddress" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal | center_vertical"
            android:paddingBottom="18dp">

                <Button
                    android:id="@+id/btnEntrar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btnEntrar2" />
        </LinearLayout>
</LinearLayout>